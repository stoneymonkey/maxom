<%= form_tag %>

<table>
  <tr>
    <td>User name:</td>
    <td><%= text_field("user", "first_name") %></td>
  </tr>
  <tr>
    <td>Password:</td>
    <td><%= password_field("user", "password") %></td>
  </tr>

  <tr>
    <td></td>
    <td><input type="submit" value=" LOGIN " /></td>
  </tr>
</table>

<%= end_form_tag %>